{
  "name": "@oceanprotocol/dbs",
  "source": "./src/index.ts",
  "version": "0.0.2-alpha.19",
  "description": "Javascript library for calling the decentralised backend storage ",
  "files": [
    "dist/**"
  ],
  "main": "./dist/lib.js",
  "umd:main": "dist/lib.umd.js",
  "module": "./dist/lib.module.js",
  "exports": {
    ".": {
      "require": "./dist/lib.js",
      "default": "./dist/lib.modern.mjs"
    },
    "./dbs": {
      "require": "./dist/src/DBSClient.d.ts",
      "default": "./dist/src/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "test": "npm run mocha --  'test/**/*.test.ts'",
    "clean": "rm -rf ./dist/ ./doc/ ./.nyc_output",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx . && npm run type-check",
    "lint:fix": "eslint --ignore-path .gitignore --ext .ts,.tsx . --fix",
    "docs": "typedoc --options typedoc.json --plugin typedoc-plugin-markdown",
    "doc:json": "node ./scripts/typedoc.js",
    "prepare": "husky install",
    "release": "release-it",
    "build": "npm run clean && microbundle build --format modern,esm,cjs,umd --compress --tsconfig tsconfig.json",
    "mocha": "TS_NODE_PROJECT='./test/tsconfig.json' mocha --config=test/.mocharc.json --node-env=test --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oceanprotocol/dbs.js.git"
  },
  "author": "Ocean Protocol Foundation <devops@oceanprotocol.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oceanprotocol/dbs.js/issues"
  },
  "homepage": "https://github.com/oceanprotocol/dbs.js#readme",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "chai": "^4.3.7",
    "eslint": "^8.44.0",
    "eslint-config-oceanprotocol": "^2.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "microbundle": "^0.15.1",
    "mocha": "^10.2.0",
    "prettier": "^3.0.1",
    "pretty-quick": "^3.1.3",
    "release-it": "^16.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.6.4",
    "form-data": "^4.0.0",
    "fs": "^0.0.1-security",
    "validator": "^13.9.0"
  },
  "release-it": {
    "hooks": {
      "after:bump": "npm run build"
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  }
}
